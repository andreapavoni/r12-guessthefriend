<div id="game" class="play clearfix"
  data-eliminate-url="<%= eliminate_path %>"
  data-guess-url="<%= guess_path %>"
  data-restart-url="<%= restart_path %>"
  data-abandon-url="<%= abandon_path %>"
  data-reveal-url="<%= reveal_path %>"
  data-won-url="<%= won_path %>" />

  <% if @game %>
    <%= render 'board' %>
  <% else %>
    <div id="stalk" data-url="<%= make_game_path %>" data-target="#game">
      <h2>Please wait, we're stalking your friends...</h2>
      <div class="spinner"></div>
    </div>
  <% end %>

</div>
