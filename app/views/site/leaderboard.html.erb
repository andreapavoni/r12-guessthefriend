<h1>Leaderboard</h1>

<table>
  <th>
    <td></td>
    <td>Name</td>
    <td>Points</td>
  </th>
  <% @players.each do |player| %>
    <tr>
      <td><%= image_tag profile_pic_for(player.uid, player.oauth_token) %></td>
      <td><%= player.name %></td>
      <td><%= player.score %></td>
    </tr>
  <% end %>
</table>
